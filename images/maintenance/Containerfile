ARG GO_VERSION=1.25
ARG GO_BASE="golang:${GO_VERSION}-alpine"

FROM ${GO_BASE} AS builder
RUN apk add --no-cache git
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -trimpath -ldflags="-s -w" -o /out/provisioner ./cmd/provisioner-dispatcher

FROM quay.io/fedora/fedora-bootc:40 AS final
RUN dnf -y install \
    podman \
    jq \
    util-linux-core \
    wimlib-utils \
    ntfs-3g \
    && dnf clean all
RUN install -d -m 0755 /opt/shoal/bin /etc/containers/systemd /etc/systemd/system/multi-user.target.wants /usr/lib/bootc/bound-images.d

# Default kernel args for better headless debugging on serial consoles.
# bootc reads kargs drop-ins from /usr/lib/bootc/kargs.d and applies them
# when generating boot loader entries on install.
RUN install -d -m 0755 /usr/lib/bootc/kargs.d \
    && printf '%s\n' 'console=ttyS0,115200 console=tty0' > /usr/lib/bootc/kargs.d/50-serial.conf

COPY --from=builder /out/provisioner /usr/sbin/provisioner
COPY internal/provisioner/maintenance/scripts/ /opt/shoal/bin/
COPY internal/provisioner/maintenance/systemd/ /etc/systemd/system/
COPY internal/provisioner/maintenance/quadlet/ /etc/containers/systemd/

RUN find /opt/shoal/bin -type f -name '*.sh' -exec chmod 0755 {} +
RUN ln -s ../provision-dispatcher.service /etc/systemd/system/multi-user.target.wants/provision-dispatcher.service

ENV PATH="/opt/shoal/bin:${PATH}" \
    container=oci

CMD ["/usr/lib/systemd/systemd"]
